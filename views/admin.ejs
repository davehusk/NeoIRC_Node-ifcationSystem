<!DOCTYPE html>
<html>
<head>
    <title>Neo IRC Admin Panel</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
<header class="main-header">
    <nav class="toolbar admin-toolbar">
        <div class="toolbar-left">
            <a href="/dashboard">ğŸ  Dashboard</a>
            <a href="/channels">ğŸ“¡ Channels</a>
            <% if (typeof isAdmin !== 'undefined' && isAdmin) { %>
                <a href="/admin">ğŸ› ï¸ Admin Panel</a>
            <% } %>
        </div>
        <div class="toolbar-right">
            <button onclick="toggleZoom()">ğŸ” Zoom</button>
            <form action="/logout" method="POST">
                <button type="submit">âï¸ Logout</button>
            </form>
        </div>
    </nav>
</header>

<main class="main-content">
    <h2>ğŸ› ï¸ Admin Panel</h2>

    <section>
        <h3>ğŸ“‹ User List</h3>
        <ul class="user-list">
            <% users.forEach(u => { %>
                <li>
                    <strong><%= u.username %></strong> â€” <%= u.role %>
                    <% if (u.isOnline) { %>
                        <span class="online">ğŸŸ¢ Online</span>
                    <% } else { %>
                        <span class="offline">ğŸ”˜ Last active: <%= new Date(u.lastActive).toLocaleString() %></span>
                    <% } %>
                </li>
            <% }) %>
        </ul>
    </section>

    <section>
        <h3>ğŸ“¢ Send Global Announcement</h3>
        <form id="admin-message-form">
            <textarea id="admin-announcement" name="message" required placeholder="Broadcast to all users"></textarea>
            <input type="hidden" name="fromAdmin" value="true">
            <button type="submit">ğŸ“¡ Send Announcement</button>
        </form>
    </section>

    <section>
        <h3>ğŸ§¾ Recent Announcements <button id="toggle-announcements">Collapse</button></h3>
        <div id="announcement-wrapper" class="chat-box">
            <% announcements.slice(0, 5).forEach(msg => { 
                const isNew = (new Date() - new Date(msg.timestamp)) < (5 * 60 * 1000); // last 5 minutes
            %>
                <div class="announcement">
                    <strong>ğŸ“¢ <%= msg.sender %></strong>
                    <% if (isNew) { %><span class="new-tag">ğŸ†•</span><% } %>
                    <span class="timestamp"><%= new Date(msg.timestamp).toLocaleString() %></span><br>
                    <span><%= msg.content %></span>
                </div>
            <% }) %>
        </div>
    </section>
</main>

<script>
    function toggleZoom() {
        document.body.classList.toggle('zoomed');
    }

    document.getElementById("admin-message-form")?.addEventListener("submit", async function (e) {
        e.preventDefault();
        const message = this.message.value;
        await fetch("/send", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ message, fromAdmin: true })
        });
        this.reset();
        location.reload(); // TEMP: reload to show new announcement
    });

    document.getElementById("toggle-announcements")?.addEventListener("click", () => {
        const el = document.getElementById("announcement-wrapper");
        el.style.display = el.style.display === "none" ? "block" : "none";
    });
</script>
</body>
</html>
